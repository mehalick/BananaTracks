@page "/request-time-off"
@inherits AppComponentBase

<PageTitle>Request Time Off | Banana Tracks</PageTitle>

<Page>

	<EditForm Model="@Model" OnValidSubmit="@HandleValidSubmit">
		<DataAnnotationsValidator />
		<ValidationSummary />

		<div class="mb-3">
			<InputDate @bind-Value="Model.Date" title="Date" class="form-control" />
		</div>

		<button type="submit" class="btn">Submit</button>
	</EditForm>

</Page>
