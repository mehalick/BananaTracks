@page "/"
@inherits AppComponentBase

<PageTitle>Home | Banana Tracks</PageTitle>

<Page>
	<p><img src="https://ojs.azureedge.net/assets/banner-637762719499419452.png" class="img-fluid" alt="" /></p>
	<div id="grid">
		<div>
			<Loading IsLoading="User is null" Style="@LoadingStyle.Panel">
				<dl>
					<dt>Name</dt>
					<dd>@User!.Name</dd>
					<dt>Team</dt>
					<dd>@User.TeamName</dd>
					<dt>Start Date</dt>
					<dd>@User.StartDate.ToSortableDate()</dd>
				</dl>
			</Loading>
		</div>
		<div></div>
		<div class="text-center">
			<a href="/request-time-off">Request Time Off</a>
		</div>
	</div>
	<Loading IsLoading="TimeOff is null">
		<p></p>
		<table class="table table-dark">
			<thead>
			<tr>
				<th>Date</th>
				<th>Name</th>
				<th>Status</th>
				<th>Type</th>
			</tr>
			</thead>
			<tbody>
			@foreach (var item in TimeOff!.Items)
			{
				<tr>
					<td>@item.Date.ToDateTime().ToString("yyyy-MM-dd")</td>
					<td>@item.UserName</td>
					<td>@item.Status</td>
					<td>@item.Type</td>
				</tr>
			}
			</tbody>
		</table>
	</Loading>
</Page>
