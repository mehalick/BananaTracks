@page "/auth/send-link"
@model BananaTracks.App.Pages.Auth.SendLinkModel

<form method="post">
	<div class="input-group">
		<input asp-for="Email" class="form-control" placeholder="Email" aria-label="Email" />
		<button type="submit" class="btn btn-primary">Send Link</button>
	</div>
	<span asp-validation-for="Email" class="text-danger">Please enter your email address.</span>
</form>

@if (Model.SignInUrl is not null)
{
	<div class="text-center m-4"><a href="@Model.SignInUrl">Sign In</a></div>
}
